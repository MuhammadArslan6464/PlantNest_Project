@model PlantNest_Project.Models.AdminLogin

@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- main content start-->
<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">Admin Login</h2>
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header text-center bg-primary text-white">
                            <h3>Login</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <div class="form-group mb-4">
                                        @Html.LabelFor(model => model.AdName, htmlAttributes: new { @class = "control-label col-form-label" })
                                        @Html.EditorFor(model => model.AdName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your username" } })
                                        @Html.ValidationMessageFor(model => model.AdName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group mb-4">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-form-label" })
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password", type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                                    </div>
                                </div>
                            }

                            <div class="text-center mt-3">
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
