@model PlantNest_Project.Models.Plant

@{
    ViewBag.Title = "Buy Plant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url('@Url.Content("~/assets/img/bg-img/24.jpg")');">
        <h2>Confirm Your Purchase</h2>
    </div>
</div>

<div class="container">
    <div class="row mt-5">
        <!-- Plant Image Section -->
        <div class="col-md-6">
            <div class="plant-image-container text-center">
                <img src="@Model.ImageURL" alt="Plant Image" class="img-fluid rounded shadow-sm" />
            </div>
        </div>

        <!-- Plant Details Section -->
        <div class="col-md-6">
            <div class="plant-details p-4 rounded shadow-sm bg-white">
                <h3 class="mb-3">@Model.Name</h3>
                <p><strong>Price:</strong> <span class="text-success">@Model.Price.ToString("C")</span></p>
                <p><strong>Discount:</strong> <span class="text-danger">@Model.Discount</span></p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Quantity:</strong> @ViewBag.Quantity</p>
                <p><strong>Total Price:</strong> <span class="text-primary">@(Model.Price * ViewBag.Quantity)</span></p>

                <!-- Confirmation and Payment Options -->
                <div class="mt-4">
                    <form action="@Url.Action("ConfirmPurchase", "Home")" method="post">
                        <input type="hidden" name="id" value="@Model.PlantID" />
                        <input type="hidden" name="quantity" value="@ViewBag.Quantity" />
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Confirm Purchase</button>
                    </form>
                    <a href="@Url.Action("Search", "Home")" class="btn btn-secondary btn-lg btn-block mt-3">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Styles -->
<style>
    .breadcrumb-area {
        margin-bottom: 50px;
    }

    .plant-image-container img {
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
    }

    .plant-details {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
    }

        .plant-details h3 {
            font-size: 1.8em;
            color: #333;
        }

        .plant-details p {
            font-size: 1.1em;
            color: #555;
        }

        .plant-details strong {
            color: #000;
        }

        .plant-details .text-success {
            color: #28a745 !important;
        }

        .plant-details .text-danger {
            color: #dc3545 !important;
        }

        .plant-details .text-primary {
            color: #007bff !important;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
