@model PlantNest_Project.Models.Review

@{
    ViewBag.Title = "Write a Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Write a Review</h2>

@using (Html.BeginForm("CreateReview", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.PlantID)

    <div class="form-group">
        @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit Review" class="btn btn-primary" />
    </div>
}
