@model PlantNest_Project.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-area">
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url('@Url.Content("~/assets/img/bg-img/24.jpg")');">
        <h2 class="text-white">Register</h2>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-success text-white">
                    <h3>Create an Account</h3>
                </div>
                <div class="card-body">
                    <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Register", "Home")">Register</a>
                        </li>
                    </ul>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email"})
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.PasswordHash, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                                <div class="col-sm-8">
                                    @Html.PasswordFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-12 text-center">
                                    <input type="submit" value="Create Account" class="btn btn-success btn-lg" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>


<style>
    .breadcrumb-area {
        margin-bottom: 20px;
    }

    .top-breadcrumb-area h2 {
        font-size: 2rem;
        font-weight: 600;
        color: #fff;
    }

    .nav-pills .nav-link {
        font-size: 1rem;
        font-weight: 500;
        color: #28a745; 
        text-decoration: none;
    }

        .nav-pills .nav-link.active {
            color: #ffffff;
            background-color: #28a745; 
            font-weight: 700;
        }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
        background-color: #28a745; 
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745; 
    }

    .form-group label {
        font-weight: 600;
    }
</style>
